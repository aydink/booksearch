{
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 0,
    "analysis": {
      "filter": {
        "shingle_filter": {
          "type": "shingle",
          "min_shingle_size": 2,
          "max_shingle_size": 2,
          "output_unigrams": false
        },
        "shingle_filter_suggester": {
          "type": "shingle",
          "min_shingle_size": 2,
          "max_shingle_size": 3
        },
        "turkish_stop": {
          "type": "stop",
          "stopwords": "_turkish_"
        },
        "turkish_lowercase": {
          "type": "lowercase",
          "language": "turkish"
        },
        "turkish_keywords": {
          "type": "keyword_marker",
          "keywords": [
            ""
          ]
        },
        "turkish_stemmer": {
          "type": "stemmer",
          "language": "turkish"
        },
        "turkish_synonym": {
          "type": "synonym",
          "synonyms_path": "analysis/turkish_synonym.txt"
        }
      },
      "analyzer": {
        "shingle_analyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "apostrophe",
            "turkish_lowercase",
            "turkish_keywords",
            "turkish_synonym",
            "shingle_filter"
          ]
        },
        "turkish_analyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "apostrophe",
            "turkish_lowercase",
            "turkish_synonym"
          ]
        },
        "turkish_simple": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "apostrophe",
            "turkish_lowercase"
          ]
        },
        "trigram": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "turkish_lowercase",
            "shingle_filter_suggester"
          ]
        }
      }
    }
  },
  "mappings": {
    "novel": {
      "properties": {
        "title": {
          "type": "text",
          "analyzer": "turkish_analyzer",
          "fields": {
            "raw": {
              "type": "text",
              "analyzer": "turkish_simple"
            }
          }
        },
        "page": {
          "type": "integer"
        },
        "year": {
          "type": "integer"
        },
        "department": {
          "type": "keyword"
        },
        "genre": {
          "type": "keyword"
        },
        "category": {
          "type": "keyword"
        },
        "content": {
          "type": "text",
          "analyzer": "turkish_analyzer",
          "fields": {
            "raw": {
              "type": "text",
              "analyzer": "turkish_simple"
            },
            "bigrammed": {
              "type": "text",
              "analyzer": "shingle_analyzer"
            },
            "trigram": {
              "type": "text",
              "analyzer": "trigram"
            }
          }
        }
      }
    }
  }
}
