{
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 0,
    "analysis": {
      "filter": {
        "shingle_filter_suggester": {
          "max_shingle_size": "3",
          "min_shingle_size": "2",
          "type": "shingle"
        },
        "turkish_lowercase": {
          "type": "lowercase",
          "language": "turkish"
        },
        "turkish_synonym": {
          "type": "synonym",
          "synonyms_path": "analysis/turkish_synonym.txt"
        },
        "shingle_filter": {
          "max_shingle_size": "2",
          "min_shingle_size": "2",
          "output_unigrams": "false",
          "type": "shingle"
        },
        "turkish_stop": {
          "type": "stop",
          "stopwords": "_turkish_"
        },
        "turkish_stemmer": {
          "type": "stemmer",
          "language": "turkish"
        },
        "turkish_keywords": {
          "keywords": [
            ""
          ],
          "type": "keyword_marker"
        }
      },
      "analyzer": {
        "trigram": {
          "filter": [
            "turkish_lowercase",
            "shingle_filter_suggester"
          ],
          "type": "custom",
          "tokenizer": "standard"
        },
        "shingle_analyzer": {
          "filter": [
            "apostrophe",
            "turkish_lowercase",
            "turkish_keywords",
            "turkish_synonym",
            "shingle_filter"
          ],
          "type": "custom",
          "tokenizer": "standard"
        },
        "turkish_analyzer": {
          "filter": [
            "apostrophe",
            "turkish_lowercase",
            "turkish_synonym"
          ],
          "type": "custom",
          "tokenizer": "standard"
        },
        "turkish_simple": {
          "filter": [
            "apostrophe",
            "turkish_lowercase"
          ],
          "type": "custom",
          "tokenizer": "standard"
        }
      }
    }
  },
  "mappings": {
    "book": {
      "properties": {
        "serial": {
          "type": "text",
          "copy_to": "titlefull"
        },
        "title": {
          "type": "text",
          "copy_to": "titlefull",
          "store": true,
          "analyzer": "turkish_analyzer"
        },
        "titlefull": {
          "type": "text",
          "store": true,
          "analyzer": "shingle_analyzer"
        },
        "num_pages": {
          "type": "integer"
        },
        "year": {
          "type": "integer"
        },
        "department": {
          "type": "keyword"
        },
        "genre": {
          "type": "keyword"
        },
        "category": {
          "type": "keyword"
        }
      }
    }
  }
}
