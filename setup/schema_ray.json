{
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 0,
    "analysis": {
      "filter": {
        "shingle_filter": {
          "type": "shingle",
          "min_shingle_size": 2,
          "max_shingle_size": 2,
          "output_unigrams": false
        },
        "turkish_stop": {
          "type": "stop",
          "stopwords": "_turkish_"
        },
        "turkish_lowercase": {
          "type": "lowercase",
          "language": "turkish"
        }
      },
      "analyzer": {
        "shingle_analyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "apostrophe",
            "turkish_lowercase",
            "shingle_filter"
          ]
        },
        "turkish_simple": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "apostrophe",
            "turkish_lowercase"
          ]
        }
      }
    }
  },
  "mappings": {
    "book": {
      "properties": {
        "serial": {
          "type": "text",
          "copy_to": "titlefull"
        },
        "title": {
          "type": "text",
          "copy_to": "titlefull", 
          "analyzer": "turkish_simple"
        },
        "titlefull": {
          "type": "text",
          "store": true, 
          "analyzer": "turkish_simple"
        },
        "num_pages": {
          "type": "integer"
        },
        "year": {
          "type": "integer"
        },
        "department": {
          "type": "keyword"
        },
        "genre": {
          "type": "keyword"
        },
        "category": {
          "type": "keyword"
        }
      }
    }
  }
}

