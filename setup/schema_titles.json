{
    "settings": {
      "number_of_shards": 1,
      "number_of_replicas": 0,
      "analysis": {
        "filter": {
          "shingle_filter": {
            "type": "shingle",
            "min_shingle_size": 2,
            "max_shingle_size": 2,
            "output_unigrams": false
          },
          "shingle_filter_suggester": {
            "type": "shingle",
            "min_shingle_size": 2,
            "max_shingle_size": 3
          },
          "turkish_stop": {
            "type": "stop",
            "stopwords": "_turkish_"
          },
          "turkish_lowercase": {
            "type": "lowercase",
            "language": "turkish"
          },
          "turkish_keywords": {
            "type": "keyword_marker",
            "keywords": [
              ""
            ]
          },
          "turkish_stemmer": {
            "type": "stemmer",
            "language": "turkish"
          }
        },
        "analyzer": {
          "shingle_analyzer": {
            "type": "custom",
            "tokenizer": "standard",
            "filter": [
              "apostrophe",
              "turkish_lowercase",
              "turkish_keywords",
              "shingle_filter"
            ]
          },
          "turkish_simple": {
            "type": "custom",
            "tokenizer": "standard",
            "filter": [
              "apostrophe",
              "turkish_lowercase"
            ]
          }
        }
      }
    },
    "mappings": {
      "book": {
        "properties": {
          "serial": {
            "type": "keyword"
          },
          "title": {
            "type": "text",
            "analyzer": "turkish_simple"
          },
          "title.full": {
            "type": "text",
            "analyzer": "turkish_simple"
          },
          "num_pages": {
            "type": "integer"
          },
          "year": {
            "type": "integer"
          },
          "department": {
            "type": "keyword"
          },
          "genre": {
            "type": "keyword"
          },
          "category": {
            "type": "keyword"
          }
        }
      }
    }
  }
  